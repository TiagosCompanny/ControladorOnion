@using System.Globalization
@model List<ControladorOnion.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div style="display:flex; justify-content:space-between">

    <h1>Lista de Produtos</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Cadastrar um novo produto</a>
    </p>

</div>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{CultureInfo culturaMoedaBrasileira = new CultureInfo("pt-BR");}

        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.ProdutoId</td>
                <td>@produto.Nome</td>
                <td>@produto.Valor.ToString("C", culturaMoedaBrasileira)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@produto.ProdutoId" class="btn btn-info">Editar</a>
                    <a asp-action="Delete" asp-route-id="@produto.ProdutoId" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>