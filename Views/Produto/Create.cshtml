@model ControladorOnion.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<h1>Criar Produto</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" type="number" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Cadastrar Produto" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br>
<br>
<div>
    <a asp-action="Index" class="button-mecanic">Voltar para a lista</a>
</div>
